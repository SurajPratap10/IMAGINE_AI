      document
        .getElementById("contactform")
        .addEventListener("submit", async (e) => {
          e.preventDefault();

          // Gather form data
          const formData = {
            firstName: document.getElementById("ijowk-6").value.trim(),
            lastName: document.getElementById("indfi-4").value.trim(),
            email: document.getElementById("ipmgh-6").value.trim(),
            phone: document.getElementById("imgis-5").value.trim(),
            feedback: document.getElementById("i5vyy-6").value.trim(),
          };

          console.log(formData);
          try {
            const response = await fetch("http://localhost:5001/contact", {
              method: "POST",
              headers: {
                "Content-Type": "application/json",
              },
              body: JSON.stringify({firstName: formData.firstName, lastName: formData.lastName, email: formData.email, phone: formData.phone, feedback: formData.feedback}),
            });

            if (response.ok) {
              alert("Thanks for mail us, we will contact you soon...");
            } else {
              alert("Failed to send feedback");
            }
          } catch (error) {
            alert("Error: " + error.message);
          }
        });
    </script>

