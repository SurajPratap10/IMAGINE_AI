<%- include('partials/header') %>

<div class="container mt-5">
  <h1 class="hl">Login</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" name="password">
            </div>
            <button type="submit" class="log btn btn-dark">Login</button>
            <a class="log btn btn-block btn-social" href="/register" role="button">Create new account</a>
            <a class="log btn btn-block btn-social btn-google" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              Sign In with Google
            </a>
            <a class="log btn btn-block btn-social btn-github" href="/auth/github" role="button">
              <i class="fab fa-github"></i>
              Sign In with Github
            </a>
          </form>

        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
